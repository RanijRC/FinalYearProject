@implements IDisposable
@if(allState.ShowDataPending)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card border-danger shadow-lg">
                    <div class="card-header">
                        <h4 class="float-start">Manage Complaint Pending</h4>
                    </div>
                    <div class="card-header" style="max-height:580px; overflow-x:hidden; overflow-y:scroll;">
                        <div class="card-body">
                            @{
                                var Tool = (new List<string>() { "Search", "Excel Export", "PDF Export", "Print" });
                            }
                            <SfGrid DataSource="@DataPendings" AllowPaging="true" AllowSorting="true" Toolbar="@Tool"
                                AllowExcelExport="true" @ref="DefaultGrid" AllowPdfExport="true">
                                <GridPageSettings PageSize="5"></GridPageSettings>
                                <GridEvents OnToolbarClick="ToolbarClickHandler" TValue="DataPending"></GridEvents>
                                <GridColumns>
                                    <GridColumn Field=@nameof(DataPending.ComplaintId) HeaderText="Id"></GridColumn>
                                    <GridColumn HeaderText="Type">
                                        <Template>
                                            @{
                                                var item = (context as DataPending);
                                                <div>
                                                    @item!.DataPendingType!.Name
                                                </div>
                                            }
                                        </Template>
                                    </GridColumn>
                                    <GridColumn Field=@nameof(DataPending.ComplaintDateStart) HeaderText="Start Date"></GridColumn>
                                    <GridColumn Field=@nameof(DataPending.ComplaintDateEnd) HeaderText="Expected End Date"></GridColumn>
                                    <GridColumn Field=@nameof(DataPending.NumberofDays) HeaderText="Number of Days"></GridColumn>
                                    <GridColumn HeaderText="Action">
                                        <Template>
                                            @{
                                                var complaint = (context as DataPending);
                                                <div>
                                                    <i class="bi bi-pencil text-info" id="cursorStyle" @onclick="() => EditClicked(complaint!)"></i>
                                                    <i class="bi bi-trash text-danger" id="cursorStyle" @onclick="() => DeleteClicked(complaint!)"></i>
                                                </div>
                                            }
                                        </Template>
                                    </GridColumn>
                                </GridColumns>
                            </SfGrid>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<DataPendingDialog @ref="pendingDialog" 
                    ItemModel="ItemModel"
                    DataPendingTypes="DataPendingTypes"
                    HandleSaveOperationEvent="HandleSaveOperationEvent"/>
@code{
    private SfGrid<DataPending>? DefaultGrid;
    DataPendingDialog? pendingDialog;
    DataPending ItemModel = new();
    public List<DataPending> DataPendings {get;set;} =new();
    public List<DataPendingType> DataPendingTypes {get;set;} = new();
    protected async override Task OnInitializedAsync()
    {
        await GetTypes();
        await GetPending();
        allState.Action += StateHasChanged;
    }

    private async Task GetTypes() => DataPendingTypes = await pendingtypeService.GetAll(Constants.DataPendingTypeBaseUrl);

    private async Task GetPending() => DataPendings = await datapendingService.GetAll(Constants.DataPendingBaseUrl);

    void OpenDialog() => pendingDialog?.OpenDialog();

    private async Task HandleSaveOperationEvent(DataPending item)
    {
        var result = await datapendingService.Update(item, Constants.DataPendingBaseUrl);
        bool successCheck = await DisplayMessage(result.flag, result.Message);
        if (successCheck)
        {
            ItemModel = new();
            await GetPending();
        }
    }

    private void EditClicked(DataPending item)
    {
        ItemModel = item;
        OpenDialog();
    }

    private async Task DeleteClicked(DataPending item)
    {
        bool confirm = await dialogService.ConfirmAsync($"Are you sure you wanna delete this?", "Confirm Delete");
        if (!confirm) return;

        var response = await datapendingService.DeleteById(item.ComplaintId, Constants.DataPendingBaseUrl);
        var result = await DisplayMessage(response.flag, response.Message);
        if (result)
            await GetPending();
    }

    private async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Success Operation");
            return true;
        }
        else
        {
            await dialogService.AlertAsync(message, "Alert!");
            return false;
        }
    }

    public async Task ToolbarClickHandler(Syncfusion.Blazor.Navigations.ClickEventArgs args)
    {
        if (args.Item.Text == "Excel Export")
            await this.DefaultGrid!.ExcelExport()!;

        if (args.Item.Text == "PDF Export")
            await this.DefaultGrid!.PdfExport()!;
    }

    public void Dispose() => allState.Action -= StateHasChanged;

}